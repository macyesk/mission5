
@{
    Layout = "_Layout";
}

<div class="text-center">
    <p>Have a recipe you want to try?</p>
    <h1>Lesson Pricing Calculator</h1>
    <br>
</div>

<div class="input-group mb-3 col-6 d-flex justify-content-center">
    <form action="">
        <label for="hoursInput">Hours:</label>
        <input type="number" id="hoursInput" class="form-control" placeholder="Hours of lesson">
        <label for="hoursInput">Rate (in dollars):</label>
        <input type="number" id="price" class="form-control" placeholder="30" value="30" disabled>
        <br>
        <button type="button" class="btn btn-primary" id="calcPriceButton">Calculate Price</button>
    </form>
</div>

<div class="text-center">
    <h1>Total lesson cost:</h1>
    <br>
    <h2 id="priceOutput"></h2>
</div>